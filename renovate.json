{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly",
    ":semanticCommitTypeAll(chore)"
  ],
  "automerge": true,
  "labels": [
    "renovate"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "groupName": "go-libraries",
      "matchManagers": ["gomod"]
    },
    {
      "matchDepTypes": ["dependency"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackagePatterns": ["^github.com/google/go-github$"],
      "customManagers": [
        {
          "fileMatch": ["\\.go$"],
          "matchStrings": [
            "\"github.com/google/go-github/v(?<currentValue>\\d+)/github\""
          ],
          "datasourceTemplate": "go",
          "versioningTemplate": "semver"
        }
      ]
    }
  ]
}
